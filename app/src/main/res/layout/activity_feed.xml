            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/sixth_article"
                style="@style/CardView.Light"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/fifth_article"
                app:layout_constraintTop_toBottomOf="@id/fourth_article"
                tools:ignore="ContentDescription">

           <android.support.constraint.ConstraintLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sudadera"

                android:src="@drawable/sudadera"
                android:layout_width="160dp"
                android:layout_height="132dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:paddingBottom="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/button_article6"
                app:layout_constraintEnd_toEndOf="parent"
