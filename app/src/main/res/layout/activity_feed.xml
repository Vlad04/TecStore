            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                app:layout_constraintTop_toBottomOf="@id/eigth_article"></android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

